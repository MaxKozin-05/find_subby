<!-- app/views/jobs/index.html.erb -->
<div class="max-w-6xl mx-auto p-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold">Job Requests</h1>

    <!-- Status Filter Tabs -->
    <div class="flex gap-2">
      <%= link_to "All", jobs_path,
          class: "px-3 py-2 rounded text-sm #{params[:status].blank? ? 'bg-blue-600 text-white' : 'border hover:bg-gray-50'}" %>
      <%= link_to "New Leads", jobs_path(status: :lead),
          class: "px-3 py-2 rounded text-sm #{params[:status] == 'lead' ? 'bg-blue-600 text-white' : 'border hover:bg-gray-50'}" %>
      <%= link_to "In Flight", jobs_path(status: [:quoted, :won, :in_progress]),
          class: "px-3 py-2 rounded text-sm #{Array(params[:status]).map(&:to_s).sort == %w[in_progress quoted won] ? 'bg-blue-600 text-white' : 'border hover:bg-gray-50'}" %>
      <%= link_to "Completed", jobs_path(status: :completed),
          class: "px-3 py-2 rounded text-sm #{params[:status] == 'completed' ? 'bg-blue-600 text-white' : 'border hover:bg-gray-50'}" %>
      <%= link_to "Lost", jobs_path(status: :lost),
          class: "px-3 py-2 rounded text-sm #{params[:status] == 'lost' ? 'bg-blue-600 text-white' : 'border hover:bg-gray-50'}" %>
    </div>
  </div>

  <% if @jobs.any? %>
    <div class="space-y-4">
      <% @jobs.each do |job| %>
        <div class="bg-white rounded-lg shadow border hover:shadow-md transition-shadow">
          <%= link_to job, class: "block p-6" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-start justify-between mb-2">
                  <h3 class="font-semibold text-lg text-gray-900 hover:text-blue-600">
                    <%= job.title %>
                  </h3>
                  <span class="ml-4 inline-block px-3 py-1 text-sm font-medium rounded-full
                    <%= case job.status
                        when 'lead' then 'bg-yellow-100 text-yellow-800'
                        when 'quoted' then 'bg-purple-100 text-purple-800'
                        when 'won' then 'bg-green-100 text-green-800'
                        when 'in_progress' then 'bg-indigo-100 text-indigo-800'
                        when 'completed' then 'bg-emerald-100 text-emerald-800'
                        when 'lost' then 'bg-red-100 text-red-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= job.status.humanize %>
                  </span>
                </div>

                <div class="flex items-center gap-6 text-sm text-gray-600 mb-3">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <%= job.client_name %>
                  </span>

                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <%= job.client_email %>
                  </span>

                  <% if job.client_phone.present? %>
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                      <%= job.client_phone %>
                    </span>
                  <% end %>
                </div>

                <% if job.description.present? %>
                  <p class="text-gray-700 mb-3 line-clamp-2">
                    <%= truncate(job.description, length: 200) %>
                  </p>
                <% end %>

                <div class="flex items-center justify-between text-sm text-gray-500">
                  <div class="flex items-center gap-4">
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                      </svg>
                      Budget: <%= job.display_budget %>
                    </span>

                    <% if job.location.present? %>
                      <span class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <%= truncate(job.location, length: 30) %>
                      </span>
                    <% end %>
                  </div>

                  <div class="flex items-center gap-4">
                    <% if job.preferred_start_date.present? %>
                      <span>Start: <%= job.preferred_start_date.strftime("%b %d") %></span>
                    <% end %>
                    <% if job.starts_on.present? && job.ends_on.present? %>
                      <span>Booked: <%= job.starts_on.strftime('%b %d') %> â€“ <%= job.ends_on.strftime('%b %d') %></span>
                    <% end %>
                    <span>Submitted <%= time_ago_in_words(job.created_at) %> ago</span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Pagination could go here if needed -->

  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No job requests</h3>
      <p class="mt-1 text-sm text-gray-500">
        <% if params[:status].present? %>
          No jobs with <%= params[:status].humanize.downcase %> status.
        <% else %>
          You haven't received any job requests yet.
        <% end %>
      </p>
      <div class="mt-6">
        <%= link_to profile_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
          Check Your Profile
        <% end %>
      </div>
    </div>
  <% end %>
</div>
