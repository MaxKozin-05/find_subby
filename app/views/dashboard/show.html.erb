<!-- app/views/dashboard/show.html.erb (updated) -->
<div class="mx-auto max-w-5xl p-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold">Dashboard</h1>

    <!-- Notifications Bell -->
    <%= link_to notifications_path, class: "relative p-2 hover:bg-gray-100 rounded-lg" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 17h5l-5 5v-5zm-7.5 1A7.5 7.5 0 104 9.5a7.5 7.5 0 008.5 8.5z"/>
      </svg>
      <% if current_user.unread_notifications_count > 0 %>
        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">
          <%= current_user.unread_notifications_count %>
        </span>
      <% end %>
    <% end %>
  </div>

  <p class="mt-2 text-gray-600">Welcome, <%= current_user.email %>.</p>

  <!-- Quick Stats -->
  <div class="mt-6 grid gap-4 md:grid-cols-4">
    <div class="bg-white rounded-xl border p-6">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <div class="ml-4">
          <div class="text-2xl font-bold text-blue-600"><%= @stats[:total_jobs] %></div>
          <div class="text-sm text-gray-500">Total Jobs</div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border p-6">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div class="ml-4">
          <div class="text-2xl font-bold text-green-600"><%= @stats[:active_jobs] %></div>
          <div class="text-sm text-gray-500">Active Jobs</div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border p-6">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <div class="ml-4">
          <div class="text-2xl font-bold text-purple-600"><%= @stats[:projects] %></div>
          <div class="text-sm text-gray-500">Projects</div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border p-6">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <div class="text-2xl font-bold text-yellow-600"><%= @stats[:this_week_jobs] %></div>
          <div class="text-sm text-gray-500">This Week</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Cards -->
  <div class="mt-8 grid gap-4 md:grid-cols-2 lg:grid-cols-4">
    <%= link_to jobs_path, class: "rounded-xl border p-6 hover:shadow-lg transition-shadow bg-white" do %>
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <div>
          <h3 class="font-medium">Job Requests</h3>
          <p class="text-sm text-gray-500">Manage job requests</p>
        </div>
      </div>
    <% end %>

    <%= link_to profile_path, class: "rounded-xl border p-6 hover:shadow-lg transition-shadow bg-white" do %>
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <h3 class="font-medium">Profile</h3>
          <p class="text-sm text-gray-500">Manage your profile</p>
        </div>
      </div>
    <% end %>

    <%= link_to projects_path, class: "rounded-xl border p-6 hover:shadow-lg transition-shadow bg-white" do %>
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <div>
          <h3 class="font-medium">Projects</h3>
          <p class="text-sm text-gray-500">Showcase your work</p>
        </div>
      </div>
    <% end %>

    <!-- Add this card to the navigation cards section -->
  <%= link_to calendar_days_path, class: "rounded-xl border p-6 hover:shadow-lg transition-shadow bg-white" do %>
    <div class="flex items-center space-x-3">
      <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <div>
        <h3 class="font-medium">Calendar</h3>
        <p class="text-sm text-gray-500">Manage availability</p>
      </div>
    </div>
  <% end %>
  </div>

  <!-- Recent Job Requests -->
  <div class="mt-8 bg-white rounded-xl border p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-medium">Recent Job Requests</h2>
      <%= link_to "View All", jobs_path, class: "text-blue-600 hover:text-blue-700" %>
    </div>

    <% if @recent_jobs.any? %>
      <div class="space-y-3">
        <% @recent_jobs.each do |job| %>
          <div class="border-l-4
            <%= case job.status
                when 'lead' then 'border-yellow-500'
                when 'contacted' then 'border-blue-500'
                when 'quoted' then 'border-purple-500'
                when 'accepted' then 'border-green-500'
                else 'border-gray-500'
                end %> pl-4">
            <div class="flex items-start justify-between">
              <div>
                <h3 class="font-medium">
                  <%= link_to job.title, job, class: "hover:text-blue-600" %>
                </h3>
                <p class="text-sm text-gray-600">
                  <%= job.client_name %> â€¢ <%= time_ago_in_words(job.created_at) %> ago
                </p>
              </div>
              <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full
                <%= case job.status
                    when 'lead' then 'bg-yellow-100 text-yellow-800'
                    when 'contacted' then 'bg-blue-100 text-blue-800'
                    when 'quoted' then 'bg-purple-100 text-purple-800'
                    when 'accepted' then 'bg-green-100 text-green-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= job.status.humanize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No job requests yet.</p>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="mt-6">
    <h2 class="text-lg font-medium mb-4">Quick Actions</h2>
    <div class="flex flex-wrap gap-3">
      <%= link_to edit_profile_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" do %>
        Edit Profile
      <% end %>
      <%= link_to new_project_path, class: "px-4 py-2 border border-gray-300 rounded hover:bg-gray-50" do %>
        Add Project
      <% end %>
      <%= link_to jobs_path(status: :lead), class: "px-4 py-2 border border-gray-300 rounded hover:bg-gray-50" do %>
        View New Leads
      <% end %>
      <% if current_user.profile&.handle.present? %>
        <%= link_to public_profile_path(current_user.profile.handle),
            target: "_blank",
            class: "px-4 py-2 border border-gray-300 rounded hover:bg-gray-50" do %>
          View Public Profile
        <% end %>
      <% end %>
    </div>
  </div>
</div>
