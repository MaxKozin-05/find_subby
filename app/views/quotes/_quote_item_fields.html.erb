<div class="quote-item-row grid grid-cols-12 gap-4 items-start py-4 border-b border-gray-100 last:border-b-0"
     data-quote-form-target="itemRow">

  <%= form.hidden_field :category, value: category %>

  <div class="col-span-4">
    <%= form.text_field :description,
        placeholder: "Description of #{category} item",
        data: { action: "input->quote-form#updateTotals" },
        class: "w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
  </div>

  <div class="col-span-2">
    <%= form.number_field :quantity,
        step: 0.01, min: 0, placeholder: "Qty",
        data: { action: "input->quote-form#updateTotals" },
        class: "w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
  </div>

  <div class="col-span-2">
    <%= form.text_field :unit,
        placeholder: "Unit",
        class: "w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
  </div>

  <div class="col-span-2">
    <%= form.number_field :unit_price,
        step: 0.01, min: 0, placeholder: "Price",
        data: { action: "input->quote-form#updateTotals" },
        class: "w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
  </div>

  <div class="col-span-1">
    <span class="text-sm font-medium text-gray-700 line-total">$0.00</span>
  </div>

  <div class="col-span-1">
    <button type="button"
            data-action="click->quote-form#removeItem"
            class="text-red-600 hover:text-red-800 text-sm p-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    </button>
  </div>

  <% if form.object.persisted? %>
    <%= form.hidden_field :_destroy %>
  <% end %>
</div>